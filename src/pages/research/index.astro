---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const researchAreas = [
  { name: "ATMOSPHERIC SCIENCES", desc: "Planetary atmosphere modeling, catalytic conversion systems, weather pattern engineering, and long-cycle terraforming optimization.", stat: "2,100+ papers" },
  { name: "CYBERNETIC INTELLIGENCE", desc: "Neural lattice architecture, synthetic cognition, emotional modeling, adaptive behavioral systems, and human-machine interfaces.", stat: "1,800+ papers" },
  { name: "PROPULSION & ENERGY", desc: "Quantum fold mechanics, fusion reactor efficiency, antimatter containment, and next-generation FTL navigation systems.", stat: "1,400+ papers" },
  { name: "BIOLOGICAL SCIENCES", desc: "Xenobiology, genetic engineering, pathogen containment, ecosystem design, and bio-pharmaceutical development.", stat: "1,600+ papers" },
  { name: "HEALTH & MEDICINE", desc: "Autonomous surgical systems, hypersleep physiology, deep-space radiation medicine, and regenerative therapeutics.", stat: "1,200+ papers" },
  { name: "MATERIALS SCIENCE", desc: "High-performance alloys, polymer composites, nano-structured surfaces, and extreme-environment material systems.", stat: "900+ papers" },
  { name: "ELECTRONICS & COMMS", desc: "FTL communications relay, quantum-encrypted data transmission, sensor arrays, and interstellar networking protocols.", stat: "700+ papers" },
];

const breakthroughs = [
  { year: "2023", title: "First Synthetic Neural Network" },
  { year: "2025", title: "Micro-Fusion Reactor Prototype" },
  { year: "2029", title: "CERN Acquisition and Particle Physics Program" },
  { year: "2032", title: "Quantum Fold Propulsion (FTL)" },
  { year: "2035", title: "Atmospheric Recombination at Scale" },
  { year: "2039", title: "First Breathable Extrasolar Atmosphere" },
  { year: "2042", title: "David Series Commercial Synthetic" },
  { year: "2058", title: "Hypersleep Extended Duration (75+ years)" },
  { year: "2065", title: "MedPod Autonomous Surgical Platform" },
  { year: "2078", title: "FTL Communications Relay Network" },
  { year: "2094", title: "Nanotechnology-Assisted Terraforming" },
  { year: "2110", title: "Quantum Lattice Computing" },
];
---

<Layout
  title="Research & Development"
  description="Weyland-Yutani invests $50B+ annually in fundamental and applied research across atmospheric sciences, cybernetics, propulsion, biological sciences, and health technologies."
>
  <Header />

  <main class="bg-black pt-36">
    <!-- HERO -->
    <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden border-b-4 border-[#FFC600]">
      <div class="industrial-grid absolute inset-0 opacity-20"></div>
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[#FFC600] to-transparent"></div>

      <div class="relative container mx-auto px-6 text-center py-24">
        <div class="inline-flex items-center gap-3 mb-8">
          <div class="h-px w-16 bg-[#FFC600]"></div>
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.3em] font-mono">INNOVATION DIVISION</span>
          <div class="h-px w-16 bg-[#FFC600]"></div>
        </div>

        <h1 class="text-7xl md:text-9xl lg:text-[10rem] font-black text-white leading-none uppercase mb-6">
          RESEARCH <span class="text-[#FFC600] text-glow-yellow">&</span> DEVELOPMENT
        </h1>

        <div class="h-1 w-48 bg-[#FFC600] mx-auto mb-8"></div>

        <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto uppercase tracking-wider font-mono leading-relaxed">
          FUNDAMENTAL SCIENCE DRIVES APPLIED INNOVATION
        </p>
      </div>

      <div class="absolute bottom-0 left-0 right-0 hazard-stripes h-2"></div>
    </section>

    <!-- R&D INVESTMENT -->
    <section class="relative py-20 bg-[#0a0a0a] border-b border-[#1a1a1a]">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-5xl font-black text-[#FFC600]">$52.8B</div>
            <div class="text-xs text-gray-500 font-mono uppercase mt-3 tracking-wider">ANNUAL R&D INVESTMENT</div>
          </div>
          <div>
            <div class="text-5xl font-black text-[#FFC600]">10,000+</div>
            <div class="text-xs text-gray-500 font-mono uppercase mt-3 tracking-wider">ACTIVE PATENTS</div>
          </div>
          <div>
            <div class="text-5xl font-black text-[#FFC600]">14,200</div>
            <div class="text-xs text-gray-500 font-mono uppercase mt-3 tracking-wider">RESEARCH PERSONNEL</div>
          </div>
          <div>
            <div class="text-5xl font-black text-[#FFC600]">38</div>
            <div class="text-xs text-gray-500 font-mono uppercase mt-3 tracking-wider">RESEARCH FACILITIES</div>
          </div>
        </div>
      </div>
    </section>

    <!-- RESEARCH PHILOSOPHY -->
    <section class="relative py-20 bg-black">
      <div class="industrial-grid-dense absolute inset-0 opacity-5"></div>

      <div class="relative container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.2em] font-mono">OUR APPROACH</span>
          <h2 class="text-4xl md:text-5xl font-black text-white mt-4 mb-8 uppercase">THE WEYLAND-YUTANI RESEARCH MODEL</h2>

          <div class="space-y-6 text-gray-400 text-base leading-relaxed">
            <p>
              Weyland-Yutani's research enterprise operates on a foundational principle: the most transformative applied technologies emerge from rigorous fundamental science. The Corporation maintains one of the largest privately funded basic research programs in existence, alongside targeted applied research initiatives aligned with commercial objectives.
            </p>
            <p>
              Our research model integrates three tiers of activity. The first is foundational research -- open-ended inquiry into the fundamental principles of physics, biology, chemistry, and computation. The second is directed research -- targeted investigations aimed at solving specific engineering challenges. The third is development -- the translation of research outcomes into deployable technologies and commercial products.
            </p>
            <p>
              This tiered approach has produced every major technology in the Corporation's portfolio, from quantum fold propulsion to the David synthetic platform to the MedPod surgical system. We invest in the long term because the long term is where the greatest returns are found.
            </p>
          </div>

          <blockquote class="border-l-4 border-[#FFC600] pl-6 py-2 mt-10">
            <p class="text-[#FFC600] text-xl font-bold italic font-mono">"GREAT CIVILIZATIONS ARE NOT BUILT ON INCREMENTAL IMPROVEMENTS. THEY ARE BUILT ON BREAKTHROUGHS."</p>
            <cite class="text-gray-500 text-sm font-mono mt-2 block not-italic">-- SIR PETER WEYLAND, FOUNDER</cite>
          </blockquote>
        </div>
      </div>
    </section>

    <!-- RESEARCH AREAS -->
    <section class="relative py-20 bg-[#0a0a0a] border-t border-b border-[#1a1a1a]">
      <div class="container mx-auto px-6">
        <div class="flex items-center gap-4 mb-12">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.2em] font-mono">RESEARCH AREAS</span>
          <div class="flex-1 h-px bg-[#1a1a1a]"></div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {researchAreas.map((area) => (
            <div class="corp-card p-8">
              <h3 class="text-lg font-black text-white uppercase mb-3">{area.name}</h3>
              <p class="text-sm text-gray-500 leading-relaxed mb-4">{area.desc}</p>
              <div class="text-xs font-mono text-[#FFC600] tracking-wider">{area.stat}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- KEY BREAKTHROUGHS TIMELINE -->
    <section class="relative py-20 bg-black">
      <div class="container mx-auto px-6">
        <div class="flex items-center gap-4 mb-12">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.2em] font-mono">KEY BREAKTHROUGHS</span>
          <div class="flex-1 h-px bg-[#1a1a1a]"></div>
        </div>

        <div class="max-w-4xl mx-auto space-y-4">
          {breakthroughs.map((item) => (
            <div class="flex items-center gap-6 p-4 bg-[#0a0a0a] border-l-2 border-[#FFC600] hover:border-l-4 transition-all">
              <span class="text-[#FFC600] font-mono font-bold text-sm shrink-0 w-16">{item.year}</span>
              <div class="h-px flex-1 bg-[#1a1a1a]"></div>
              <span class="text-white text-sm font-bold uppercase">{item.title}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- COLLABORATION & PATENTS -->
    <section class="relative py-20 bg-[#0a0a0a] border-t border-[#1a1a1a]">
      <div class="container mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16">
          <div>
            <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.2em] font-mono">ACADEMIC COLLABORATION</span>
            <h2 class="text-3xl font-black text-white mt-4 mb-6 uppercase">PARTNERING WITH THE WORLD'S BEST</h2>
            <p class="text-gray-400 text-base leading-relaxed mb-4">
              Weyland-Yutani maintains active research partnerships with more than 120 academic institutions worldwide, including joint doctoral programs, sponsored research chairs, and shared laboratory facilities. Our annual academic collaboration budget exceeds $3.2 billion.
            </p>
            <p class="text-gray-400 text-base leading-relaxed mb-6">
              The Corporation's acquisition of CERN in 2029 established a permanent commitment to fundamental physics research that continues to yield dividends across multiple technology domains.
            </p>
            <a href="/research/partnerships" class="btn-secondary px-8 py-3 text-sm inline-block">VIEW PARTNERSHIPS</a>
          </div>
          <div>
            <span class="text-[#FFC600] text-xs font-black uppercase tracking-[0.2em] font-mono">INTELLECTUAL PROPERTY</span>
            <h2 class="text-3xl font-black text-white mt-4 mb-6 uppercase">PROTECTING INNOVATION</h2>
            <p class="text-gray-400 text-base leading-relaxed mb-4">
              The Corporation's patent portfolio exceeds 10,000 active patents across 28 technology categories, spanning propulsion systems, atmospheric engineering, cybernetics, medical devices, energy systems, and communications technology. In the most recent fiscal year, the Corporation filed 847 new patent applications.
            </p>
            <p class="text-gray-400 text-base leading-relaxed mb-6">
              Our technology licensing program generates $12.8 billion in annual revenue and provides qualified partners with access to non-core intellectual property under structured licensing agreements.
            </p>
            <a href="/research/publications" class="btn-secondary px-8 py-3 text-sm inline-block">VIEW PUBLICATIONS</a>
          </div>
        </div>
      </div>
    </section>

    <!-- NAVIGATION -->
    <section class="relative py-16 bg-black border-t border-[#1a1a1a]">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-3 gap-6">
          <a href="/research/publications" class="corp-card p-8 block group text-center">
            <h3 class="text-xl font-black text-white uppercase mb-2 group-hover:text-[#FFC600] transition-colors">PUBLICATIONS</h3>
            <p class="text-sm text-gray-500">Browse our research papers and journal publications</p>
          </a>
          <a href="/research/facilities" class="corp-card p-8 block group text-center">
            <h3 class="text-xl font-black text-white uppercase mb-2 group-hover:text-[#FFC600] transition-colors">FACILITIES</h3>
            <p class="text-sm text-gray-500">Explore our global network of research laboratories</p>
          </a>
          <a href="/research/partnerships" class="corp-card p-8 block group text-center">
            <h3 class="text-xl font-black text-white uppercase mb-2 group-hover:text-[#FFC600] transition-colors">PARTNERSHIPS</h3>
            <p class="text-sm text-gray-500">Learn about our academic and institutional collaborations</p>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
