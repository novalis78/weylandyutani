---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout
  title="Portable Decontamination Pack - Products"
  description="Weyland-Yutani Portable Decontamination Pack. Self-replenishing environmental decontamination unit for field and colony operations. Product specifications and ordering."
>
  <Header />

  <main class="bg-black pt-36">
    <!-- HERO -->
    <section class="relative min-h-[50vh] flex items-center overflow-hidden border-b-4 border-[#FFC600]">
      <div class="industrial-grid absolute inset-0 opacity-20"></div>
      <div class="hazard-stripes h-3 absolute top-0 left-0 right-0"></div>

      <div class="relative container mx-auto px-6 py-24">
        <div class="max-w-5xl">
          <div class="flex items-center gap-4 mb-8">
            <a href="/products" class="text-[10px] font-mono text-gray-500 uppercase tracking-[0.2em] hover:text-[#FFC600] transition-colors">PRODUCTS</a>
            <span class="text-gray-700">/</span>
            <span class="text-[10px] font-mono text-[#FFC600] uppercase tracking-[0.2em]">DECONTAMINATION PACK</span>
          </div>

          <div class="inline-block px-4 py-1.5 bg-[#FFC600] text-black font-black text-[10px] uppercase tracking-[0.2em] mb-6 clip-corner">
            ENVIRONMENTAL SYSTEMS
          </div>

          <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6 leading-[0.9] uppercase">
            PORTABLE<br/>DECONTAMINATION<br/><span class="text-[#FFC600] text-glow-yellow">PACK</span>
          </h1>

          <p class="text-gray-400 font-mono text-sm uppercase leading-relaxed max-w-2xl mb-8">
            SELF-REPLENISHING ENVIRONMENTAL DECONTAMINATION UNIT. NEUTRALIZES BIOLOGICAL, CHEMICAL, AND RADIOLOGICAL CONTAMINANTS IN THE FIELD. STANDARD ISSUE FOR ALL OFF-WORLD OPERATIONS.
          </p>

          <div class="flex flex-wrap gap-4">
            <a href="/contact" class="btn-primary">REQUEST QUOTE</a>
            <a href="/products" class="btn-secondary">ALL PRODUCTS</a>
          </div>
        </div>
      </div>

      <div class="hazard-stripes h-3 absolute bottom-0 left-0 right-0"></div>
    </section>

    <!-- QUICK SPECS -->
    <section class="relative py-8 bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="relative container mx-auto px-6">
        <div class="flex flex-wrap justify-center gap-8 md:gap-16">
          <div class="text-center">
            <div class="text-xl font-black text-[#FFC600]">2059</div>
            <div class="text-[9px] font-mono text-gray-500 uppercase tracking-[0.15em]">YEAR INTRODUCED</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-black text-[#FFC600]">4.8 KG</div>
            <div class="text-[9px] font-mono text-gray-500 uppercase tracking-[0.15em]">TOTAL WEIGHT</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-black text-[#FFC600]">99.97%</div>
            <div class="text-[9px] font-mono text-gray-500 uppercase tracking-[0.15em]">PATHOGEN ELIMINATION</div>
          </div>
          <div class="text-center">
            <div class="text-xl font-black text-[#FFC600]">SELF-REPLEN</div>
            <div class="text-[9px] font-mono text-gray-500 uppercase tracking-[0.15em]">REAGENT SYSTEM</div>
          </div>
        </div>
      </div>
    </section>

    <!-- TECHNICAL SPECIFICATIONS -->
    <section class="relative py-32 bg-black">
      <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="max-w-7xl">
          <div class="text-[10px] font-mono text-[#FFC600] uppercase tracking-[0.2em] mb-4">SPECIFICATIONS</div>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-12 uppercase">TECHNICAL DATA</h2>

          <div class="grid lg:grid-cols-2 gap-12">
            <div>
              <table class="w-full">
                <thead>
                  <tr class="border-b-2 border-[#FFC600]">
                    <th class="text-left py-3 px-4 text-[10px] font-black text-[#FFC600] uppercase tracking-[0.15em]" colspan="2">PHYSICAL</th>
                  </tr>
                </thead>
                <tbody class="text-xs font-mono uppercase">
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400 w-1/2">DIMENSIONS (PACKED)</td>
                    <td class="py-3 px-4 text-white">380MM x 260MM x 140MM</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">WEIGHT (FULL)</td>
                    <td class="py-3 px-4 text-white">4.8 KG</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">CASING</td>
                    <td class="py-3 px-4 text-white">REINFORCED POLYMER / MIL-SPEC RATED</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">OPERATING TEMP</td>
                    <td class="py-3 px-4 text-white">-40C TO +65C</td>
                  </tr>
                  <tr>
                    <td class="py-3 px-4 text-gray-400">WATERPROOF RATING</td>
                    <td class="py-3 px-4 text-white">IP68 (FULL SUBMERSION)</td>
                  </tr>
                </tbody>
              </table>

              <table class="w-full mt-8">
                <thead>
                  <tr class="border-b-2 border-[#FFC600]">
                    <th class="text-left py-3 px-4 text-[10px] font-black text-[#FFC600] uppercase tracking-[0.15em]" colspan="2">DECONTAMINATION PERFORMANCE</th>
                  </tr>
                </thead>
                <tbody class="text-xs font-mono uppercase">
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400 w-1/2">BIOLOGICAL AGENTS</td>
                    <td class="py-3 px-4 text-white">99.97% ELIMINATION</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">CHEMICAL AGENTS</td>
                    <td class="py-3 px-4 text-white">99.8% NEUTRALIZATION</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">RADIOLOGICAL</td>
                    <td class="py-3 px-4 text-white">ALPHA / BETA PARTICLE REMOVAL</td>
                  </tr>
                  <tr>
                    <td class="py-3 px-4 text-gray-400">COVERAGE AREA</td>
                    <td class="py-3 px-4 text-white">UP TO 50 SQ METERS PER CYCLE</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <div>
              <table class="w-full">
                <thead>
                  <tr class="border-b-2 border-[#FFC600]">
                    <th class="text-left py-3 px-4 text-[10px] font-black text-[#FFC600] uppercase tracking-[0.15em]" colspan="2">REAGENT SYSTEM</th>
                  </tr>
                </thead>
                <tbody class="text-xs font-mono uppercase">
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400 w-1/2">TYPE</td>
                    <td class="py-3 px-4 text-white">SELF-REPLENISHING (CATALYTIC)</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">CYCLES PER CHARGE</td>
                    <td class="py-3 px-4 text-white">200+ (STANDARD CONDITIONS)</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">REPLENISHMENT TIME</td>
                    <td class="py-3 px-4 text-white">4 HOURS (AMBIENT ABSORPTION)</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">CATALYST LIFE</td>
                    <td class="py-3 px-4 text-white">5 YEARS / 10,000 CYCLES</td>
                  </tr>
                  <tr>
                    <td class="py-3 px-4 text-gray-400">POWER</td>
                    <td class="py-3 px-4 text-white">MICRO-FUSION CELL (10-YEAR LIFE)</td>
                  </tr>
                </tbody>
              </table>

              <table class="w-full mt-8">
                <thead>
                  <tr class="border-b-2 border-[#FFC600]">
                    <th class="text-left py-3 px-4 text-[10px] font-black text-[#FFC600] uppercase tracking-[0.15em]" colspan="2">DEPLOYMENT MODES</th>
                  </tr>
                </thead>
                <tbody class="text-xs font-mono uppercase">
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400 w-1/2">SPRAY</td>
                    <td class="py-3 px-4 text-white">DIRECTED / TARGETED APPLICATION</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">FOG</td>
                    <td class="py-3 px-4 text-white">AREA DISPERSAL (ENCLOSED SPACES)</td>
                  </tr>
                  <tr class="border-b border-[#1a1a1a]">
                    <td class="py-3 px-4 text-gray-400">SOAK</td>
                    <td class="py-3 px-4 text-white">SURFACE TREATMENT (EQUIPMENT)</td>
                  </tr>
                  <tr>
                    <td class="py-3 px-4 text-gray-400">BARRIER</td>
                    <td class="py-3 px-4 text-white">PERIMETER DECONTAMINATION LINE</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- APPLICATIONS -->
    <section class="relative py-32 bg-[#0a0a0a] border-y-2 border-[#1a1a1a]">
      <div class="relative container mx-auto px-6">
        <div class="max-w-3xl mb-16">
          <div class="text-[10px] font-mono text-[#FFC600] uppercase tracking-[0.2em] mb-4">USE CASES</div>
          <h2 class="text-3xl md:text-4xl font-black text-white mb-6 uppercase">APPLICATIONS</h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl">
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">COLONY OPERATIONS</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              STANDARD ISSUE FOR ALL COLONY PERSONNEL. AIRLOCK DECONTAMINATION, HABITAT STERILIZATION, AND ENVIRONMENTAL HAZARD RESPONSE.
            </p>
          </div>
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">FLEET OPERATIONS</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              SHIPBOARD DECONTAMINATION FOR CARGO HOLDS, PASSENGER AREAS, AND MEDICAL BAYS. COMPATIBLE WITH ALL W-Y VESSEL CLASSES.
            </p>
          </div>
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">MEDICAL FACILITIES</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              RAPID STERILIZATION OF OPERATING ENVIRONMENTS. COMPATIBLE WITH MEDPOD 720I DECONTAMINATION PROTOCOLS.
            </p>
          </div>
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">TERRAFORMING SITES</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              FIELD DECONTAMINATION FOR PERSONNEL AND EQUIPMENT OPERATING IN PARTIALLY PROCESSED ATMOSPHERES AND CONTAMINATED ZONES.
            </p>
          </div>
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">RESEARCH FACILITIES</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              LABORATORY AND BSL FACILITY DECONTAMINATION. EMERGENCY CONTAINMENT BREACH RESPONSE. EQUIPMENT STERILIZATION.
            </p>
          </div>
          <div class="corp-card p-6">
            <h3 class="text-sm font-black text-[#FFC600] mb-3 uppercase">SECURITY OPERATIONS</h3>
            <p class="text-[10px] font-mono text-gray-500 uppercase leading-relaxed">
              TACTICAL DECONTAMINATION FOR SECURITY TEAMS OPERATING IN HAZARDOUS ENVIRONMENTS. NBC DEFENSE INTEGRATION.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ORDERING -->
    <section class="relative py-20 bg-black">
      <div class="relative container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="text-[10px] font-mono text-[#FFC600] uppercase tracking-[0.2em] mb-4">PROCUREMENT</div>
          <h2 class="text-3xl font-black text-white mb-6 uppercase">ORDERING INFORMATION</h2>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="corp-card p-6">
              <h3 class="text-sm font-black text-white mb-3 uppercase border-b border-[#1a1a1a] pb-3">STANDARD UNIT</h3>
              <div class="space-y-2 text-[10px] font-mono text-gray-400 uppercase">
                <div>PART: WY-DP-200-STD</div>
                <div>INCLUDES: PACK, HOLSTER, MANUAL, 2X CATALYST CARTRIDGES</div>
                <div>LEAD TIME: 2-4 WEEKS (EARTH) / 8-12 WEEKS (OFF-WORLD)</div>
              </div>
            </div>
            <div class="corp-card p-6">
              <h3 class="text-sm font-black text-white mb-3 uppercase border-b border-[#1a1a1a] pb-3">INSTITUTIONAL BULK</h3>
              <div class="space-y-2 text-[10px] font-mono text-gray-400 uppercase">
                <div>MINIMUM ORDER: 50 UNITS</div>
                <div>VOLUME PRICING AVAILABLE</div>
                <div>DEDICATED ACCOUNT MANAGER ASSIGNED</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="relative py-20 bg-[#0a0a0a] border-t-2 border-[#1a1a1a]">
      <div class="hazard-stripes h-2 absolute top-0 left-0 right-0"></div>
      <div class="relative container mx-auto px-6 text-center">
        <h2 class="text-3xl font-black text-white mb-6 uppercase">REQUEST A QUOTE</h2>
        <p class="text-gray-400 font-mono text-sm uppercase mb-8 max-w-2xl mx-auto">
          CONTACT OUR ENVIRONMENTAL SYSTEMS DIVISION FOR PRICING, CUSTOMIZATION OPTIONS, AND BULK ORDERING.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/contact" class="btn-primary">CONTACT SALES</a>
          <a href="/products" class="btn-secondary">BACK TO CATALOG</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
