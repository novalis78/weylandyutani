---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
---

<Layout
  title="Home"
  description="Weyland-Yutani Corporation - Building Better Worlds. Leading the future in terraforming, cybernetics, bio-research, and advanced technologies."
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background Effects -->
      <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a0a] via-[#0a0a0a] to-[#1a1a1a]"></div>
      <div class="grid-background absolute inset-0 opacity-20"></div>
      <ParticleBackground />

      <!-- Radial Gradient Overlays -->
      <div class="absolute top-1/4 -left-1/4 w-1/2 h-1/2 bg-[#00a6d6] rounded-full opacity-20 blur-[120px]"></div>
      <div class="absolute bottom-1/4 -right-1/4 w-1/2 h-1/2 bg-[#d4af37] rounded-full opacity-10 blur-[120px]"></div>

      <!-- Content -->
      <div class="relative z-10 container mx-auto px-6 text-center pt-24">
        <div class="animate-float">
          <div class="inline-block mb-6">
            <span class="px-4 py-2 rounded-full border border-[#00a6d6]/30 bg-[#00a6d6]/10 text-[#00d4ff] text-sm font-semibold tracking-wide">
              Est. October 11, 2012
            </span>
          </div>

          <h1 class="text-6xl md:text-8xl font-bold mb-6">
            <span class="gradient-text-dual glow-text-blue">
              WEYLAND-YUTANI
            </span>
          </h1>

          <p class="text-2xl md:text-4xl font-light text-[#d4af37] mb-8 glow-text-gold">
            Building Better Worlds
          </p>

          <p class="text-lg md:text-xl text-[#a0a0a0] max-w-3xl mx-auto mb-12 leading-relaxed">
            Pioneering the future of humanity through revolutionary terraforming, advanced cybernetics,
            and breakthrough technologies that transform worlds and redefine possibilities.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="/divisions" class="btn-primary text-lg">
              Explore Our Divisions
            </a>
            <a href="/about" class="btn-secondary text-lg">
              Our Legacy
            </a>
          </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 animate-bounce">
          <svg class="w-6 h-6 text-[#00a6d6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="relative py-20 bg-gradient-to-b from-[#1a1a1a] to-[#0a0a0a]">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center group">
            <div class="text-5xl font-bold gradient-text-blue mb-2 group-hover:glow-text-blue transition-all">
              87+
            </div>
            <div class="text-[#a0a0a0]">Years of Innovation</div>
          </div>
          <div class="text-center group">
            <div class="text-5xl font-bold gradient-text-blue mb-2 group-hover:glow-text-blue transition-all">
              300+
            </div>
            <div class="text-[#a0a0a0]">Colonized Worlds</div>
          </div>
          <div class="text-center group">
            <div class="text-5xl font-bold gradient-text-blue mb-2 group-hover:glow-text-blue transition-all">
              $200T+
            </div>
            <div class="text-[#a0a0a0]">Corporate Value</div>
          </div>
          <div class="text-center group">
            <div class="text-5xl font-bold gradient-text-blue mb-2 group-hover:glow-text-blue transition-all">
              âˆž
            </div>
            <div class="text-[#a0a0a0]">Possibilities</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Divisions Section -->
    <section class="relative py-32 bg-[#0a0a0a]">
      <div class="hex-pattern absolute inset-0 opacity-30"></div>

      <div class="relative container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Our <span class="gradient-text-blue">Divisions</span>
          </h2>
          <p class="text-xl text-[#a0a0a0] max-w-2xl mx-auto">
            Leading innovation across multiple sectors to build a better tomorrow
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Terraforming -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#00a6d6] to-[#0088b3] flex items-center justify-center mb-6 group-hover:glow-blue transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Terraforming Operations</h3>
            <p class="text-[#a0a0a0] mb-4">
              Revolutionary atmospheric processors transforming hostile planets into habitable worlds. Building the colonies of tomorrow, today.
            </p>
            <a href="/divisions#terraforming" class="text-[#00a6d6] hover:text-[#00d4ff] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- Cybernetics -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#8b5cf6] to-[#6d28d9] flex items-center justify-center mb-6 group-hover:shadow-[0_0_30px_rgba(139,92,246,0.3)] transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Cybernetics & Synthetics</h3>
            <p class="text-[#a0a0a0] mb-4">
              Next-generation synthetic humans and cybernetic enhancements. Pushing the boundaries of what it means to be human.
            </p>
            <a href="/divisions#cybernetics" class="text-[#8b5cf6] hover:text-[#a78bfa] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- Bio-Research -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#10b981] to-[#059669] flex items-center justify-center mb-6 group-hover:shadow-[0_0_30px_rgba(16,185,129,0.3)] transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Bio-Research Division</h3>
            <p class="text-[#a0a0a0] mb-4">
              Cutting-edge biological research and development. Unlocking the secrets of life to advance human evolution.
            </p>
            <a href="/divisions#bio-research" class="text-[#10b981] hover:text-[#34d399] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- Security -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#ef4444] to-[#dc2626] flex items-center justify-center mb-6 group-hover:shadow-[0_0_30px_rgba(239,68,68,0.3)] transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Security Solutions</h3>
            <p class="text-[#a0a0a0] mb-4">
              Advanced weapons systems and security technologies. Protecting humanity's interests across the galaxy.
            </p>
            <a href="/divisions#security" class="text-[#ef4444] hover:text-[#f87171] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- Energy -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#f59e0b] to-[#d97706] flex items-center justify-center mb-6 group-hover:shadow-[0_0_30px_rgba(245,158,11,0.3)] transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Energy Systems</h3>
            <p class="text-[#a0a0a0] mb-4">
              Next-generation power generation and FTL propulsion. Powering humanity's expansion across the stars.
            </p>
            <a href="/divisions#energy" class="text-[#f59e0b] hover:text-[#fbbf24] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>

          <!-- Reverse Engineering -->
          <div class="card card-glow group">
            <div class="w-16 h-16 rounded-lg bg-gradient-to-br from-[#d4af37] to-[#b8941f] flex items-center justify-center mb-6 group-hover:glow-gold transition-all">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">Reverse Engineering</h3>
            <p class="text-[#a0a0a0] mb-4">
              Classified research into alien technologies. Adapting the unknown to serve humanity's future.
            </p>
            <a href="/divisions#reverse-engineering" class="text-[#d4af37] hover:text-[#ffd700] font-semibold inline-flex items-center gap-2 transition-colors">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-32 bg-gradient-to-b from-[#0a0a0a] to-[#1a1a1a]">
      <div class="grid-background-dense absolute inset-0 opacity-20"></div>

      <div class="relative container mx-auto px-6 text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Ready to Build the <span class="gradient-text-gold">Future</span>?
        </h2>
        <p class="text-xl text-[#a0a0a0] max-w-2xl mx-auto mb-12">
          Join the thousands of innovators, scientists, and pioneers shaping humanity's destiny across the stars.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="/careers" class="btn-gold text-lg">
            Explore Careers
          </a>
          <a href="/contact" class="btn-secondary text-lg">
            Contact Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
