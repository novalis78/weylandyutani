---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Home"
  description="Weyland-Yutani Corporation - Building Better Worlds. The leader in terraforming, synthetic technology, and space exploration since 2012."
>
  <Header />

  <main class="bg-black">
    <!-- HERO SECTION - FULL SCREEN DOMINANCE -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden scanlines">
      <!-- Industrial Grid Background -->
      <div class="absolute inset-0 industrial-grid opacity-30"></div>

      <!-- Radial gradient overlays -->
      <div class="absolute top-1/4 -left-1/4 w-1/2 h-1/2 bg-[#FFC600] rounded-full opacity-5 blur-[150px]"></div>
      <div class="absolute bottom-1/4 -right-1/4 w-1/2 h-1/2 bg-[#FFC600] rounded-full opacity-5 blur-[150px]"></div>

      <!-- Content -->
      <div class="relative z-10 container mx-auto px-6 text-center pt-32 pb-20">
        <!-- Hazard Stripe Accent -->
        <div class="hazard-stripes-thin h-4 w-64 mx-auto mb-12"></div>

        <!-- Massive Typography -->
        <h1 class="text-white font-black mb-6 leading-none" style="font-size: clamp(4rem, 15vw, 12rem);">
          WEYLAND-<br/><span class="text-glow-yellow" style="color: #FFC600;">YUTANI</span>
        </h1>

        <p class="text-2xl md:text-4xl font-bold text-white mb-4 tracking-widest">
          BUILDING BETTER WORLDS
        </p>

        <div class="h-1 w-48 bg-[#FFC600] mx-auto mb-12"></div>

        <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto mb-16 leading-relaxed uppercase tracking-wide">
          THE WORLD'S LEADING INNOVATOR IN TERRAFORMING, CYBERNETICS, BIO-WEAPONS RESEARCH, AND SPACE COLONIZATION SINCE 2012
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/divisions" class="btn-primary text-lg px-12 py-4">
            EXPLORE DIVISIONS
          </a>
          <a href="/technology" class="btn-secondary text-lg px-12 py-4">
            OUR TECHNOLOGY
          </a>
        </div>

        <!-- Hazard Stripe Bottom -->
        <div class="hazard-stripes-thin h-4 w-64 mx-auto mt-16"></div>
      </div>

      <!-- Corner Accents -->
      <div class="absolute top-0 left-0 w-32 h-32 border-t-4 border-l-4 border-[#FFC600]"></div>
      <div class="absolute top-0 right-0 w-32 h-32 border-t-4 border-r-4 border-[#FFC600]"></div>
      <div class="absolute bottom-0 left-0 w-32 h-32 border-b-4 border-l-4 border-[#FFC600]"></div>
      <div class="absolute bottom-0 right-0 w-32 h-32 border-b-4 border-r-4 border-[#FFC600]"></div>
    </section>

    <!-- LIVE DATA FEED SECTION -->
    <section class="relative py-0 bg-black border-t-4 border-b-4 border-[#FFC600]">
      <div class="hazard-stripes h-3"></div>

      <div class="bg-[#FFC600] py-8">
        <div class="container mx-auto px-6">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
            <div class="group">
              <div class="text-6xl font-black text-black mb-2 font-mono">$200T+</div>
              <div class="text-sm font-bold text-black uppercase tracking-widest">CORPORATE VALUE</div>
            </div>
            <div class="group">
              <div class="text-6xl font-black text-black mb-2 font-mono">300+</div>
              <div class="text-sm font-bold text-black uppercase tracking-widest">COLONIZED WORLDS</div>
            </div>
            <div class="group">
              <div class="text-6xl font-black text-black mb-2 font-mono">87+</div>
              <div class="text-sm font-bold text-black uppercase tracking-widest">YEARS OF INNOVATION</div>
            </div>
            <div class="group">
              <div class="text-6xl font-black text-black mb-2 font-mono">∞</div>
              <div class="text-sm font-bold text-black uppercase tracking-widest">POSSIBILITIES</div>
            </div>
          </div>
        </div>
      </div>

      <div class="hazard-stripes h-3"></div>
    </section>

    <!-- TERMINAL DIVISIONS SECTION -->
    <section class="relative py-32 bg-black">
      <div class="industrial-grid-dense absolute inset-0 opacity-20"></div>

      <div class="relative container mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-20">
          <div class="inline-block px-6 py-2 bg-[#FFC600] text-black font-black text-sm uppercase tracking-widest mb-6">
            CORPORATE DIVISIONS
          </div>
          <h2 class="text-5xl md:text-7xl font-black text-white mb-6">
            SIX PILLARS OF <span class="text-[#FFC600] text-glow-yellow">DOMINANCE</span>
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Terraforming -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FFC600] clip-corner flex items-center justify-center">
                <span class="text-[#FFC600] text-3xl font-black">T</span>
              </div>
              <div class="status-active text-xs font-mono text-[#FFC600]">ACTIVE</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Terraforming<br/>Operations</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              REVOLUTIONARY ATMOSPHERIC PROCESSORS TRANSFORMING HOSTILE PLANETS INTO HABITABLE COLONIES. 300+ WORLDS AND COUNTING.
            </p>
            <a href="/divisions#terraforming" class="text-[#FFC600] font-bold text-sm uppercase tracking-wider hover:text-glow-yellow transition-all">
              ACCESS DIVISION →
            </a>
          </div>

          <!-- Cybernetics -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FFC600] clip-corner flex items-center justify-center">
                <span class="text-[#FFC600] text-3xl font-black">C</span>
              </div>
              <div class="status-active text-xs font-mono text-[#FFC600]">ACTIVE</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Cybernetics &<br/>Synthetics</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              NEXT-GENERATION ARTIFICIAL BEINGS INDISTINGUISHABLE FROM HUMANS. PUSHING BOUNDARIES OF CONSCIOUSNESS.
            </p>
            <a href="/divisions#cybernetics" class="text-[#FFC600] font-bold text-sm uppercase tracking-wider hover:text-glow-yellow transition-all">
              ACCESS DIVISION →
            </a>
          </div>

          <!-- Bio-Research -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FF0000] clip-corner flex items-center justify-center">
                <span class="text-[#FF0000] text-3xl font-black">B</span>
              </div>
              <div class="status-classified text-xs font-mono text-[#FF0000]">CLASSIFIED</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Bio-Weapons<br/>Division</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              CLASSIFIED RESEARCH INTO XENOBIOLOGICAL SPECIMENS. ADAPTING ALIEN LIFE FOR STRATEGIC APPLICATIONS.
            </p>
            <a href="/divisions#bio-research" class="text-[#FF0000] font-bold text-sm uppercase tracking-wider hover:text-glow-red transition-all">
              CLEARANCE REQUIRED →
            </a>
          </div>

          <!-- Security -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FFC600] clip-corner flex items-center justify-center">
                <span class="text-[#FFC600] text-3xl font-black">S</span>
              </div>
              <div class="status-active text-xs font-mono text-[#FFC600]">ACTIVE</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Security<br/>Solutions</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              ADVANCED WEAPONS SYSTEMS AND DEFENSE TECHNOLOGIES. PRIMARY SUPPLIER TO USCM AND PRIVATE SECURITY.
            </p>
            <a href="/divisions#security" class="text-[#FFC600] font-bold text-sm uppercase tracking-wider hover:text-glow-yellow transition-all">
              ACCESS DIVISION →
            </a>
          </div>

          <!-- Energy -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FFC600] clip-corner flex items-center justify-center">
                <span class="text-[#FFC600] text-3xl font-black">E</span>
              </div>
              <div class="status-active text-xs font-mono text-[#FFC600]">ACTIVE</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Energy<br/>Systems</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              FTL PROPULSION AND NEXT-GENERATION POWER GENERATION. POWERING HUMANITY'S EXPANSION ACROSS THE STARS.
            </p>
            <a href="/divisions#energy" class="text-[#FFC600] font-bold text-sm uppercase tracking-wider hover:text-glow-yellow transition-all">
              ACCESS DIVISION →
            </a>
          </div>

          <!-- Reverse Engineering -->
          <div class="corp-card p-8 group cursor-pointer">
            <div class="flex items-center justify-between mb-6">
              <div class="w-16 h-16 bg-black border-4 border-[#FF0000] clip-corner flex items-center justify-center">
                <span class="text-[#FF0000] text-3xl font-black">R</span>
              </div>
              <div class="status-classified text-xs font-mono text-[#FF0000]">CLASSIFIED</div>
            </div>
            <h3 class="text-2xl font-black text-white mb-4 uppercase">Reverse<br/>Engineering</h3>
            <p class="text-gray-400 mb-6 font-mono text-sm leading-relaxed">
              CLASSIFIED RESEARCH INTO RECOVERED ALIEN TECHNOLOGIES. ADAPTING THE UNKNOWN FOR HUMAN ADVANCEMENT.
            </p>
            <a href="/divisions#reverse-engineering" class="text-[#FF0000] font-bold text-sm uppercase tracking-wider hover:text-glow-red transition-all">
              CLEARANCE REQUIRED →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- TERMINAL CTA SECTION -->
    <section class="relative py-20 bg-black border-t-4 border-[#FFC600]">
      <div class="container mx-auto px-6">
        <div class="terminal max-w-4xl mx-auto">
          <div class="terminal-content">
            <p class="mb-4">> SYSTEM: RECRUITMENT MODULE ACTIVE</p>
            <p class="mb-4">> STATUS: SEEKING QUALIFIED PERSONNEL</p>
            <p class="mb-6">> MESSAGE: JOIN THE MOST POWERFUL CORPORATION IN HUMAN HISTORY</p>
            <p class="mb-8">> ACTION: EXPLORE CAREER OPPORTUNITIES NOW</p>
            <div class="flex gap-4">
              <a href="/careers" class="btn-primary">
                VIEW OPEN POSITIONS
              </a>
              <a href="/contact" class="btn-secondary">
                CONTACT RECRUITMENT
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
