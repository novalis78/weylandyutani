---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const products = [
  {
    code: "WSR",
    name: "WEYLAND STORM RIFLE",
    year: "2024",
    desc: "Precision engagement platform with integrated target tracking to 500+ km range. Onboard biotelemetry assesses target health and physiology in real time. Primary sidearm for corporate security personnel.",
    category: "SMALL ARMS",
  },
  {
    code: "M41A",
    name: "M41A PULSE RIFLE",
    year: "2039",
    desc: "Standard-issue infantry weapon for the United States Colonial Marine Corps. 10mm caseless ammunition with electronically fired primer. 95-round capacity with integrated 30mm pump-action grenade launcher.",
    category: "USCM STANDARD",
  },
  {
    code: "M56",
    name: "M56 SMARTGUN",
    year: "2048",
    desc: "Crew-served automatic weapon with articulated arm mount and infrared tracking system. Motion-tracking and automated target acquisition for suppressive fire operations in low-visibility environments.",
    category: "HEAVY WEAPONS",
  },
  {
    code: "DEI",
    name: "DEFENSE ELECTRONICS SUITE",
    year: "2055",
    desc: "Integrated perimeter security platform combining radar, lidar, seismic, and electromagnetic sensors. Real-time threat assessment with automated response protocols for facility and colony defense.",
    category: "ELECTRONICS",
  },
  {
    code: "SVL",
    name: "SURVEILLANCE SYSTEMS",
    year: "2060",
    desc: "Multi-spectrum observation and monitoring networks for colony perimeter security, corporate facility protection, and high-value asset monitoring across terrestrial and orbital installations.",
    category: "ISR",
  },
  {
    code: "APD",
    name: "ARMORED PERSONNEL DELIVERY",
    year: "2062",
    desc: "M577 Armored Personnel Carrier platform. NBC-sealed crew compartment, integrated weapons station, and autonomous driving capability. Standard deployment vehicle for USCM ground operations.",
    category: "VEHICLES",
  },
];

const services = [
  { name: "COLONY SECURITY ARCHITECTURE", desc: "End-to-end security infrastructure design, deployment, and management for colony installations. Perimeter defense, access control, emergency response systems." },
  { name: "CORPORATE ASSET PROTECTION", desc: "Physical and electronic security for corporate facilities, research stations, and critical infrastructure. Executive protection and secure transport services." },
  { name: "PERSONNEL TRAINING", desc: "Professional development programs for corporate security forces, colonial marshals, and partner military organizations. Live-fire, simulation, and classroom curricula." },
  { name: "THREAT ASSESSMENT & INTELLIGENCE", desc: "Comprehensive threat analysis for planned operations, colony development, and corporate expansions. Risk modeling, contingency planning, and intelligence support." },
];
---

<Layout
  title="Security Solutions"
  description="Weyland-Yutani Security Solutions Division - Protecting humanity's interests from frontier to frontier. Primary supplier to the USCM and provider of comprehensive defense technology."
>
  <Header />

  <main class="bg-black pt-36">
    <!-- HERO -->
    <section class="relative min-h-[70vh] flex items-center overflow-hidden border-b-4 border-[#FFC600]">
      <div class="industrial-grid absolute inset-0 opacity-15"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-black via-black/90 to-transparent"></div>
      <div class="hazard-stripes h-2 absolute top-0 left-0 right-0"></div>

      <!-- Tactical grid overlay -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute inset-0" style="background: radial-gradient(circle at 80% 50%, rgba(255,198,0,0.03) 0%, transparent 50%);"></div>
        <!-- Crosshair decorative element -->
        <div class="absolute top-1/2 right-[20%] -translate-y-1/2 hidden xl:block">
          <div class="w-48 h-48 border border-[#FFC600]/10 relative">
            <div class="absolute top-1/2 left-0 right-0 h-px bg-[#FFC600]/10"></div>
            <div class="absolute left-1/2 top-0 bottom-0 w-px bg-[#FFC600]/10"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 border border-[#FFC600]/20"></div>
          </div>
        </div>
      </div>

      <div class="relative container mx-auto px-6 py-24">
        <div class="max-w-4xl">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-14 h-14 bg-[#FFC600] clip-corner flex items-center justify-center">
              <span class="text-black text-2xl font-black">SS</span>
            </div>
            <div>
              <div class="status-active text-xs font-mono text-[#FFC600] mb-1">DIVISION ACTIVE</div>
              <span class="text-gray-500 font-mono text-xs uppercase tracking-widest">EST. 2024</span>
            </div>
          </div>

          <h1 class="text-6xl md:text-8xl lg:text-9xl font-black text-white leading-[0.85] uppercase mb-8">
            SECURITY<br/>
            <span class="text-[#FFC600] text-glow-yellow">SOLUTIONS</span>
          </h1>

          <div class="h-1 w-32 bg-[#FFC600] mb-8"></div>

          <p class="text-gray-400 font-mono text-sm md:text-base leading-relaxed max-w-3xl uppercase tracking-wide">
            Protecting humanity's interests from frontier to frontier. As the primary supplier to the
            United States Colonial Marine Corps and provider of comprehensive defense solutions to
            governments and private enterprises, Weyland-Yutani Security Solutions ensures the safety
            and security of human operations across 300+ worlds.
          </p>
        </div>
      </div>

      <div class="hazard-stripes h-2 absolute bottom-0 left-0 right-0"></div>
    </section>

    <!-- STATS BAR -->
    <section class="relative bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-[#1a1a1a]">
          <div class="py-8 px-4 text-center">
            <div class="text-3xl md:text-4xl font-black text-[#FFC600] mb-1">85%</div>
            <div class="text-[10px] font-mono text-gray-500 uppercase tracking-widest">Colonial Defense Share</div>
          </div>
          <div class="py-8 px-4 text-center">
            <div class="text-3xl md:text-4xl font-black text-[#FFC600] mb-1">USCM</div>
            <div class="text-[10px] font-mono text-gray-500 uppercase tracking-widest">Primary Supplier</div>
          </div>
          <div class="py-8 px-4 text-center">
            <div class="text-3xl md:text-4xl font-black text-[#FFC600] mb-1">300+</div>
            <div class="text-[10px] font-mono text-gray-500 uppercase tracking-widest">Worlds Protected</div>
          </div>
          <div class="py-8 px-4 text-center">
            <div class="text-3xl md:text-4xl font-black text-[#FFC600] mb-1">50+</div>
            <div class="text-[10px] font-mono text-gray-500 uppercase tracking-widest">Years of Service</div>
          </div>
        </div>
      </div>
    </section>

    <!-- MILITARY PARTNERSHIPS -->
    <section class="relative py-24 bg-black border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid-dense absolute inset-0 opacity-5"></div>

      <div class="relative container mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <div>
            <div class="flex items-center gap-4 mb-4">
              <div class="h-px flex-1 max-w-[40px] bg-[#FFC600]"></div>
              <span class="text-[#FFC600] font-mono text-xs tracking-[0.3em] uppercase">Strategic Partnerships</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-black text-white uppercase mb-6">
              GOVERNMENT &<br/><span class="text-[#FFC600]">MILITARY</span>
            </h2>
            <p class="text-gray-400 font-mono text-sm uppercase leading-relaxed mb-6">
              Since the United Americas government's formal approach in 2065, Weyland-Yutani has served as
              the primary defense technology partner for the United States Colonial Marine Corps. Our
              weapons systems, defense electronics, and armored vehicle platforms form the backbone of
              colonial peacekeeping operations across human-settled space.
            </p>
            <p class="text-gray-400 font-mono text-sm uppercase leading-relaxed mb-6">
              Beyond the USCM relationship, our Security Solutions Division maintains partnerships with
              34 sovereign governments, 12 colonial administrations, and 200+ private sector clients
              requiring defense-grade security infrastructure.
            </p>
            <p class="text-gray-400 font-mono text-sm uppercase leading-relaxed">
              All military and government partnerships are subject to export control compliance, end-use
              monitoring, and full adherence to the Interstellar Arms Trade Treaty (IATT) provisions.
            </p>
          </div>

          <div class="space-y-6">
            <div class="corp-card p-6">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-[#FFC600] clip-corner flex items-center justify-center shrink-0">
                  <span class="text-black font-black text-xs">01</span>
                </div>
                <h3 class="text-sm font-black text-white uppercase">USCM PRIMARY SUPPLIER</h3>
              </div>
              <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
                Sole-source provider for infantry weapons systems, crew-served weapons, armored vehicles,
                and defense electronics for all USCM expeditionary and garrison operations.
              </p>
            </div>
            <div class="corp-card p-6">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-[#FFC600] clip-corner flex items-center justify-center shrink-0">
                  <span class="text-black font-black text-xs">02</span>
                </div>
                <h3 class="text-sm font-black text-white uppercase">COLONIAL PEACEKEEPING SUPPORT</h3>
              </div>
              <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
                Security infrastructure, training programs, and operational support for colonial
                administrations establishing law enforcement and emergency response capabilities.
              </p>
            </div>
            <div class="corp-card p-6">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-[#FFC600] clip-corner flex items-center justify-center shrink-0">
                  <span class="text-black font-black text-xs">03</span>
                </div>
                <h3 class="text-sm font-black text-white uppercase">EXPORT CONTROL COMPLIANCE</h3>
              </div>
              <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
                Full compliance with International Traffic in Arms Regulations (ITAR), the Interstellar
                Arms Trade Treaty, and all applicable export control frameworks.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- PRODUCT CATALOG -->
    <section class="relative py-24 bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="relative container mx-auto px-6">
        <div class="flex items-center gap-4 mb-4">
          <div class="h-px flex-1 max-w-[40px] bg-[#FFC600]"></div>
          <span class="text-[#FFC600] font-mono text-xs tracking-[0.3em] uppercase">Product Portfolio</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-black text-white uppercase mb-16">DEFENSE SYSTEMS</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {products.map((p) => (
            <div class="corp-card p-6">
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-[#FFC600] clip-corner text-black font-black text-xs">{p.code}</span>
                <span class="text-gray-600 font-mono text-xs">{p.year}</span>
              </div>
              <h3 class="text-lg font-black text-white uppercase mb-2">{p.name}</h3>
              <span class="text-[#FFC600] font-mono text-[10px] uppercase tracking-widest mb-3 block">{p.category}</span>
              <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">{p.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- SERVICES -->
    <section class="relative py-24 bg-black border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid-dense absolute inset-0 opacity-5"></div>

      <div class="relative container mx-auto px-6">
        <div class="flex items-center gap-4 mb-4">
          <div class="h-px flex-1 max-w-[40px] bg-[#FFC600]"></div>
          <span class="text-[#FFC600] font-mono text-xs tracking-[0.3em] uppercase">Professional Services</span>
        </div>
        <h2 class="text-4xl md:text-5xl font-black text-white uppercase mb-16">SERVICES</h2>

        <div class="grid md:grid-cols-2 gap-6">
          {services.map((s) => (
            <div class="p-8 bg-[#0a0a0a] border-2 border-[#1a1a1a] clip-corner hover:border-[#FFC600]/50 transition-all">
              <h3 class="text-lg font-black text-white uppercase mb-3">{s.name}</h3>
              <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">{s.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- PMC OPERATIONS -->
    <section class="relative py-24 bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="relative container mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <div>
            <div class="flex items-center gap-4 mb-4">
              <div class="h-px flex-1 max-w-[40px] bg-[#FFC600]"></div>
              <span class="text-[#FFC600] font-mono text-xs tracking-[0.3em] uppercase">Private Sector</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-black text-white uppercase mb-6">
              PRIVATE MILITARY<br/><span class="text-[#FFC600]">CONTRACTOR</span>
            </h2>
            <p class="text-gray-400 font-mono text-sm uppercase leading-relaxed mb-6">
              Beyond government partnerships, our Private Military Contractor division provides
              defense-grade security services to corporate clients operating in high-risk environments.
              From deep-frontier mining operations to diplomatic security, our personnel deliver
              unmatched capability and professionalism.
            </p>

            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <span class="text-[#FFC600] font-black">&gt;</span>
                <span class="text-gray-400 font-mono text-sm uppercase">FACILITY SECURITY AND ACCESS CONTROL</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-[#FFC600] font-black">&gt;</span>
                <span class="text-gray-400 font-mono text-sm uppercase">VIP AND EXECUTIVE PROTECTION DETAILS</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-[#FFC600] font-black">&gt;</span>
                <span class="text-gray-400 font-mono text-sm uppercase">SECURE TRANSPORT AND LOGISTICS</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-[#FFC600] font-black">&gt;</span>
                <span class="text-gray-400 font-mono text-sm uppercase">RAPID RESPONSE AND CRISIS MANAGEMENT</span>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-[#FFC600] font-black">&gt;</span>
                <span class="text-gray-400 font-mono text-sm uppercase">COUNTER-INTELLIGENCE AND SURVEILLANCE</span>
              </div>
            </div>
          </div>

          <div class="terminal">
            <div class="terminal-content">
              <p class="mb-2 text-gray-500">$ wy-sec --global-status</p>
              <p class="mb-1">&nbsp;</p>
              <p class="mb-1">SECURITY SOLUTIONS DIVISION :: STATUS REPORT</p>
              <p class="mb-1">=============================================</p>
              <p class="mb-1">&nbsp;</p>
              <p class="mb-1">ACTIVE CONTRACTS:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 2,847</p>
              <p class="mb-1">DEPLOYED PERSONNEL:&nbsp;&nbsp;&nbsp;&nbsp; 42,000+</p>
              <p class="mb-1">PROTECTED FACILITIES:&nbsp;&nbsp; 1,200+</p>
              <p class="mb-1">COLONIAL INSTALLATIONS: 300+</p>
              <p class="mb-1">&nbsp;</p>
              <p class="mb-1">INCIDENT RATE:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 0.003%</p>
              <p class="mb-1">CLIENT RETENTION:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 97.8%</p>
              <p class="mb-1">RESPONSE TIME (AVG):&nbsp;&nbsp;&nbsp; &lt; 4 MIN</p>
              <p class="mb-1">&nbsp;</p>
              <p class="text-gray-500">$ ALL SECTORS SECURE. STANDING BY._</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="relative py-20 bg-black">
      <div class="hazard-stripes h-2 absolute top-0 left-0 right-0"></div>
      <div class="relative container mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-5xl font-black text-white uppercase mb-6">
          SECURING <span class="text-[#FFC600] text-glow-yellow">HUMANITY'S FUTURE</span>
        </h2>
        <p class="text-gray-500 font-mono text-sm uppercase tracking-wide max-w-2xl mx-auto mb-10">
          Contact our defense solutions team for product inquiries, service proposals, or partnership opportunities.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/divisions" class="btn-secondary inline-block">ALL DIVISIONS</a>
          <a href="/contact" class="btn-primary inline-block">REQUEST CONSULTATION</a>
        </div>
      </div>
      <div class="hazard-stripes h-2 absolute bottom-0 left-0 right-0"></div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
