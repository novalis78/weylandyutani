---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact"
  description="Contact Weyland-Yutani Corporation. Get in touch with our divisions and corporate headquarters."
>
  <Header />

  <main class="pt-24">
    <section class="relative py-32 bg-gradient-to-b from-[#0a0a0a] to-[#1a1a1a]">
      <div class="grid-background absolute inset-0 opacity-20"></div>
      <div class="relative container mx-auto px-6 text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
          Get in <span class="gradient-text-blue">Touch</span>
        </h1>
        <p class="text-xl text-[#a0a0a0] max-w-3xl mx-auto">
          Ready to build better worlds together? We'd love to hear from you.
        </p>
      </div>
    </section>

    <section class="py-20 bg-[#0a0a0a]">
      <div class="container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">Send Us a Message</h2>
            <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
              <div>
                <label for="name" class="block text-sm font-semibold text-white mb-2">Full Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-[#ffffff]/10 text-white placeholder-[#666] focus:border-[#00a6d6] focus:outline-none transition-colors"
                  placeholder="John Doe"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-semibold text-white mb-2">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-[#ffffff]/10 text-white placeholder-[#666] focus:border-[#00a6d6] focus:outline-none transition-colors"
                  placeholder="john.doe@example.com"
                />
              </div>

              <div>
                <label for="division" class="block text-sm font-semibold text-white mb-2">Division of Interest</label>
                <select
                  id="division"
                  name="division"
                  class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-[#ffffff]/10 text-white focus:border-[#00a6d6] focus:outline-none transition-colors"
                >
                  <option value="">Select a division...</option>
                  <option value="terraforming">Terraforming Operations</option>
                  <option value="cybernetics">Cybernetics & Synthetics</option>
                  <option value="bio-research">Bio-Research</option>
                  <option value="security">Security Solutions</option>
                  <option value="energy">Energy Systems</option>
                  <option value="reverse-engineering">Reverse Engineering</option>
                  <option value="general">General Inquiry</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-semibold text-white mb-2">Message *</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 rounded-lg bg-[#1a1a1a] border border-[#ffffff]/10 text-white placeholder-[#666] focus:border-[#00a6d6] focus:outline-none transition-colors resize-none"
                  placeholder="Tell us about your inquiry..."
                ></textarea>
              </div>

              <button type="submit" class="btn-primary w-full">
                Send Message
              </button>

              <p class="text-xs text-[#666] text-center">
                By submitting this form, you agree to our privacy policy and terms of service.
              </p>
            </form>
          </div>

          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">Corporate Headquarters</h2>

            <div class="card p-8 mb-6">
              <div class="flex items-start gap-4 mb-6">
                <div class="w-12 h-12 rounded-lg bg-[#00a6d6]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-[#00a6d6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-2">Address</h3>
                  <p class="text-[#a0a0a0] text-sm">
                    Weyland-Yutani Tower<br/>
                    1 Corporate Plaza<br/>
                    San Francisco, CA 94111<br/>
                    United States
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4 mb-6">
                <div class="w-12 h-12 rounded-lg bg-[#00a6d6]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-[#00a6d6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-2">Email</h3>
                  <p class="text-[#a0a0a0] text-sm">
                    General: <a href="mailto:info@weylandyutani.com" class="text-[#00a6d6] hover:text-[#00d4ff]">info@weylandyutani.com</a><br/>
                    Careers: <a href="mailto:careers@weylandyutani.com" class="text-[#00a6d6] hover:text-[#00d4ff]">careers@weylandyutani.com</a><br/>
                    Press: <a href="mailto:press@weylandyutani.com" class="text-[#00a6d6] hover:text-[#00d4ff]">press@weylandyutani.com</a>
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-[#00a6d6]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-[#00a6d6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-2">Phone</h3>
                  <p class="text-[#a0a0a0] text-sm">
                    +1 (800) 555-WEYLAND<br/>
                    +1 (800) 555-9392
                  </p>
                </div>
              </div>
            </div>

            <!-- Office Hours -->
            <div class="card p-6">
              <h3 class="font-semibold text-white mb-4">Office Hours</h3>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-[#a0a0a0]">Monday - Friday</span>
                  <span class="text-white">8:00 AM - 6:00 PM PST</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-[#a0a0a0]">Saturday</span>
                  <span class="text-white">10:00 AM - 4:00 PM PST</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-[#a0a0a0]">Sunday</span>
                  <span class="text-white">Closed</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
