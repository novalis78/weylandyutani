---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact"
  description="Contact Weyland-Yutani Corporation. Get in touch with our divisions and corporate headquarters."
>
  <Header />

  <main class="bg-black">
    <!-- Hero -->
    <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden scanlines border-b-4 border-[#FFC600]">
      <div class="industrial-grid absolute inset-0 opacity-20"></div>
      <div class="hazard-stripes h-3 absolute top-0 left-0 right-0"></div>

      <div class="relative container mx-auto px-6 text-center pt-40 pb-24">
        <div class="inline-block px-8 py-3 bg-[#FFC600] text-black font-black text-xs uppercase tracking-widest mb-8 clip-corner">
          COMMUNICATION CHANNEL OPEN
        </div>

        <h1 class="text-6xl md:text-8xl font-black text-white mb-8 leading-none uppercase">
          ESTABLISH<br/><span class="text-[#FFC600] text-glow-yellow">CONTACT</span>
        </h1>

        <div class="h-1 w-64 bg-[#FFC600] mx-auto mb-8"></div>

        <p class="text-xl md:text-2xl text-gray-400 max-w-4xl mx-auto uppercase tracking-wide font-mono">
          READY TO BUILD BETTER WORLDS TOGETHER? WE'D LOVE TO HEAR FROM YOU.
        </p>
      </div>

      <div class="hazard-stripes h-3 absolute bottom-0 left-0 right-0"></div>
    </section>

    <!-- Contact Section -->
    <section class="relative py-32 bg-black">
      <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
          <!-- Contact Form -->
          <div>
            <div class="mb-8">
              <div class="inline-block px-6 py-2 bg-[#FFC600] text-black font-black text-sm uppercase tracking-widest mb-4">
                SEND MESSAGE
              </div>
              <h2 class="text-4xl font-black text-white uppercase">TRANSMIT DATA</h2>
            </div>

            <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
              <div>
                <label for="name" class="block text-sm font-black text-[#FFC600] mb-2 uppercase font-mono">FULL NAME *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-[#0a0a0a] border-2 border-[#1a1a1a] text-white placeholder-gray-600 focus:border-[#FFC600] focus:outline-none transition-colors clip-corner font-mono"
                  placeholder="JOHN DOE"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-black text-[#FFC600] mb-2 uppercase font-mono">EMAIL ADDRESS *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-[#0a0a0a] border-2 border-[#1a1a1a] text-white placeholder-gray-600 focus:border-[#FFC600] focus:outline-none transition-colors clip-corner font-mono"
                  placeholder="JOHN.DOE@EXAMPLE.COM"
                />
              </div>

              <div>
                <label for="division" class="block text-sm font-black text-[#FFC600] mb-2 uppercase font-mono">DIVISION OF INTEREST</label>
                <select
                  id="division"
                  name="division"
                  class="w-full px-4 py-3 bg-[#0a0a0a] border-2 border-[#1a1a1a] text-white focus:border-[#FFC600] focus:outline-none transition-colors clip-corner font-mono uppercase"
                >
                  <option value="">SELECT A DIVISION...</option>
                  <option value="terraforming">TERRAFORMING OPERATIONS</option>
                  <option value="cybernetics">CYBERNETICS & SYNTHETICS</option>
                  <option value="bio-research">BIO-WEAPONS DIVISION</option>
                  <option value="security">SECURITY SOLUTIONS</option>
                  <option value="energy">ENERGY SYSTEMS</option>
                  <option value="reverse-engineering">REVERSE ENGINEERING</option>
                  <option value="general">GENERAL INQUIRY</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-black text-[#FFC600] mb-2 uppercase font-mono">MESSAGE *</label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-3 bg-[#0a0a0a] border-2 border-[#1a1a1a] text-white placeholder-gray-600 focus:border-[#FFC600] focus:outline-none transition-colors resize-none clip-corner font-mono"
                  placeholder="ENTER YOUR MESSAGE..."
                ></textarea>
              </div>

              <button type="submit" class="btn-primary w-full text-lg">
                TRANSMIT MESSAGE
              </button>

              <p class="text-xs text-gray-600 text-center font-mono uppercase">
                BY SUBMITTING THIS FORM, YOU AGREE TO OUR PRIVACY POLICY AND TERMS OF SERVICE.
              </p>
            </form>
          </div>

          <!-- Contact Information -->
          <div>
            <div class="mb-8">
              <div class="inline-block px-6 py-2 bg-[#FFC600] text-black font-black text-sm uppercase tracking-widest mb-4">
                HEADQUARTERS
              </div>
              <h2 class="text-4xl font-black text-white uppercase">CORPORATE HQ</h2>
            </div>

            <div class="corp-card p-8 mb-6">
              <!-- Address -->
              <div class="flex items-start gap-4 mb-8 pb-8 border-b-2 border-[#1a1a1a]">
                <div class="w-12 h-12 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center flex-shrink-0">
                  <span class="text-[#FFC600] font-black">üìç</span>
                </div>
                <div>
                  <h3 class="font-black text-[#FFC600] mb-2 uppercase text-sm">ADDRESS</h3>
                  <p class="text-gray-400 text-sm font-mono uppercase leading-relaxed">
                    WEYLAND-YUTANI TOWER<br/>
                    1 CORPORATE PLAZA<br/>
                    SAN FRANCISCO, CA 94111<br/>
                    UNITED STATES
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4 mb-8 pb-8 border-b-2 border-[#1a1a1a]">
                <div class="w-12 h-12 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center flex-shrink-0">
                  <span class="text-[#FFC600] font-black">‚úâ</span>
                </div>
                <div>
                  <h3 class="font-black text-[#FFC600] mb-2 uppercase text-sm">EMAIL</h3>
                  <p class="text-gray-400 text-sm font-mono">
                    GENERAL: <a href="mailto:info@weylandyutani.com" class="text-[#FFC600] hover:text-white transition-colors">INFO@WEYLANDYUTANI.COM</a><br/>
                    CAREERS: <a href="mailto:careers@weylandyutani.com" class="text-[#FFC600] hover:text-white transition-colors">CAREERS@WEYLANDYUTANI.COM</a><br/>
                    PRESS: <a href="mailto:press@weylandyutani.com" class="text-[#FFC600] hover:text-white transition-colors">PRESS@WEYLANDYUTANI.COM</a>
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center flex-shrink-0">
                  <span class="text-[#FFC600] font-black">üìû</span>
                </div>
                <div>
                  <h3 class="font-black text-[#FFC600] mb-2 uppercase text-sm">PHONE</h3>
                  <p class="text-gray-400 text-sm font-mono">
                    +1 (800) 555-WEYLAND<br/>
                    +1 (800) 555-9392
                  </p>
                </div>
              </div>
            </div>

            <!-- Office Hours -->
            <div class="corp-card p-8">
              <h3 class="font-black text-white mb-6 uppercase text-lg border-b-2 border-[#FFC600] pb-3">
                OPERATIONAL HOURS
              </h3>
              <div class="space-y-4 font-mono text-sm">
                <div class="flex justify-between items-center">
                  <span class="text-gray-400 uppercase">MONDAY - FRIDAY</span>
                  <span class="text-[#FFC600] font-bold">08:00 - 18:00 PST</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400 uppercase">SATURDAY</span>
                  <span class="text-[#FFC600] font-bold">10:00 - 16:00 PST</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400 uppercase">SUNDAY</span>
                  <span class="text-[#FF0000] font-bold">OFFLINE</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
