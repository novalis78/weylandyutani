  { value: "300+", label: "COLONIZED WORLDS" },
  { value: "500K+", label: "EMPLOYEES" },
  { value: "127", label: "OFFICE LOCATIONS" },
  { value: "2,400", label: "RESEARCH FACILITIES" },
