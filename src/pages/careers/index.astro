---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const positions = [
  {
    title: "Terraforming Engineer (Senior)",
    division: "Terraforming Operations",
    location: "Off-World Assignment",
    level: "Senior",
    description: "Lead atmospheric processor deployment and calibration on frontier colony worlds. Oversee terraforming timelines spanning decades, managing atmospheric composition targets and ecological seeding programs.",
  },
  {
    title: "Synthetic Systems Architect",
    division: "Cybernetics Division",
    location: "San Francisco, Earth",
    level: "Principal",
    description: "Design next-generation synthetic neural architectures for the David and Walter series platforms. Define behavioral modeling frameworks and cognitive processing pipelines.",
  },
  {
    title: "FTL Drive Specialist",
    division: "Energy Systems",
    location: "Luna, Sea of Tranquility",
    level: "Senior",
    description: "Maintain and optimize faster-than-light propulsion systems across our corporate fleet. Conduct performance analysis and implement efficiency improvements for interstellar transit.",
  },
  {
    title: "Atmospheric Processor Technician",
    division: "Colony Operations",
    location: "Off-World Assignment",
    level: "Mid-Level",
    description: "Perform routine maintenance, diagnostics, and repair of atmospheric processing units on active colony worlds. Ensure continuous operation of life-critical atmospheric systems.",
  },
  {
    title: "Xenobiologist (Clearance Required)",
    division: "Research Division",
    location: "Classified",
    level: "Senior",
    description: "Conduct research on extraterrestrial biological specimens in controlled laboratory environments. Contribute to our understanding of non-terrestrial life and its potential applications.",
    classified: true,
  },
  {
    title: "MedPod Systems Engineer",
    division: "Health Sciences",
    location: "San Francisco, Earth",
    level: "Mid-Level",
    description: "Develop and refine automated surgical systems for the MedPod product line. Integrate diagnostic AI with precision robotic instrumentation for autonomous medical procedures.",
  },
  {
    title: "Colony Infrastructure Manager",
    division: "Frontier Operations",
    location: "Off-World Assignment",
    level: "Director",
    description: "Oversee all infrastructure development on newly established colony worlds. Manage construction teams, resource allocation, and compliance with Colonial Administration standards.",
  },
  {
    title: "Cybersecurity Analyst",
    division: "Corporate Security",
    location: "Tokyo, Earth",
    level: "Mid-Level",
    description: "Protect corporate networks spanning interstellar distances. Monitor threat vectors, implement countermeasures, and ensure data integrity across all operational theaters.",
  },
  {
    title: "Fusion Reactor Specialist",
    division: "Energy Systems",
    location: "Luna, Sea of Tranquility",
    level: "Senior",
    description: "Operate and maintain compact fusion reactor installations powering our lunar facilities and deep-space vessels. Optimize output efficiency and ensure regulatory compliance.",
  },
  {
    title: "Navigation Officer",
    division: "Fleet Operations",
    location: "Deep Space Assignment",
    level: "Mid-Level",
    description: "Chart and execute interstellar flight plans for corporate vessels. Manage FTL transit calculations, hypersleep scheduling, and emergency rerouting protocols.",
  },
  {
    title: "Holographic Systems Developer",
    division: "Electronics Division",
    location: "London, Earth",
    level: "Mid-Level",
    description: "Design and implement holographic display and interface systems for corporate, commercial, and military applications. Advance volumetric rendering and interaction frameworks.",
  },
  {
    title: "Corporate Counsel",
    division: "Legal Affairs",
    location: "Tokyo, Earth",
    level: "Senior",
    description: "Provide legal guidance on interstellar commerce, colonial governance, and intellectual property matters. Navigate multi-jurisdictional regulatory landscapes across Earth and off-world territories.",
  },
  {
    title: "Financial Analyst",
    division: "Investor Relations",
    location: "San Francisco, Earth",
    level: "Mid-Level",
    description: "Analyze financial performance across all corporate divisions. Prepare quarterly reporting, investor communications, and support capital allocation decision-making.",
  },
  {
    title: "Environmental Engineer",
    division: "Sustainability",
    location: "San Francisco, Earth",
    level: "Mid-Level",
    description: "Develop and implement environmental management programs across corporate operations. Monitor compliance with planetary protection protocols and sustainability targets.",
  },
  {
    title: "Power Loader Operator",
    division: "Colony Operations",
    location: "Off-World Assignment",
    level: "Entry-Level",
    description: "Operate P-5000 Power Loader exoskeletons for cargo handling, construction support, and logistics operations at colony facilities and orbital stations.",
  },
  {
    title: "Hypersleep Systems Technician",
    division: "Fleet Operations",
    location: "Luna, Sea of Tranquility",
    level: "Mid-Level",
    description: "Maintain and calibrate cryogenic hypersleep chambers across the corporate fleet. Ensure passenger safety protocols and system integrity for long-duration interstellar transit.",
  },
  {
    title: "Planetary Geologist",
    division: "Terraforming Operations",
    location: "Off-World Assignment",
    level: "Senior",
    description: "Conduct geological surveys of candidate terraforming worlds. Assess mineral resources, tectonic stability, and subsurface conditions to inform atmospheric processor placement.",
  },
  {
    title: "AI Ethics Compliance Officer",
    division: "Cybernetics Division",
    location: "San Francisco, Earth",
    level: "Director",
    description: "Oversee ethical compliance in synthetic intelligence development. Ensure all AI and synthetic personnel programs meet regulatory standards and corporate governance requirements.",
  },
];
---

<Layout
  title="Careers - Build the Future"
  description="Join Weyland-Yutani Corporation and help build better worlds. Explore career opportunities across terraforming, cybernetics, energy systems, and more. Fortune 500 #1 Best Company to Work For."
>
  <Header />

  <main class="bg-black pt-36">
    <!-- HERO -->
    <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden border-b-4 border-[#FFC600]">
      <div class="industrial-grid absolute inset-0 opacity-20"></div>
      <div class="hazard-stripes h-3 absolute top-0 left-0 right-0"></div>

      <div class="relative container mx-auto px-6 text-center py-24">
        <div class="inline-block px-8 py-3 bg-[#FFC600] text-black font-black text-xs uppercase tracking-widest mb-8 clip-corner">
          NOW RECRUITING ACROSS ALL DIVISIONS
        </div>

        <h1 class="text-6xl md:text-8xl lg:text-9xl font-black text-white mb-8 leading-none uppercase">
          BUILD THE <span class="text-[#FFC600] text-glow-yellow">FUTURE</span>
        </h1>

        <div class="h-1 w-64 bg-[#FFC600] mx-auto mb-8"></div>

        <p class="text-lg md:text-xl text-gray-400 max-w-4xl mx-auto uppercase tracking-wide font-mono">
          JOIN 500,000+ PROFESSIONALS SHAPING HUMANITY'S DESTINY ACROSS 300+ WORLDS.
          YOUR CAREER AT WEYLAND-YUTANI IS MORE THAN A JOB. IT IS A MISSION.
        </p>

        <div class="flex flex-wrap justify-center gap-6 mt-12">
          <a href="#positions" class="btn-primary text-sm">VIEW OPEN POSITIONS</a>
          <a href="/careers/benefits" class="btn-secondary text-sm">BENEFITS & CULTURE</a>
        </div>
      </div>

      <div class="hazard-stripes h-3 absolute bottom-0 left-0 right-0"></div>
    </section>

    <!-- EMPLOYER OF CHOICE -->
    <section class="relative py-24 bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="text-center mb-16">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-widest font-mono">EMPLOYER OF CHOICE</span>
          <h2 class="text-4xl md:text-5xl font-black text-white mt-4 mb-6 uppercase">
            WHERE THE BEST <span class="text-[#FFC600]">BUILD</span> THE BEST
          </h2>
          <p class="text-gray-500 font-mono text-sm uppercase tracking-wide max-w-3xl mx-auto">
            WEYLAND-YUTANI HAS BEEN RECOGNIZED AS THE WORLD'S PREMIER EMPLOYER FOR OVER TWO DECADES.
            OUR PEOPLE ARE OUR MOST IMPORTANT ASSET.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
          <div class="corp-card p-8 text-center">
            <div class="text-4xl font-black text-[#FFC600] text-glow-yellow mb-2">#1</div>
            <div class="text-white font-bold text-sm uppercase tracking-wider mb-2">FORTUNE 500 BEST COMPANY TO WORK FOR</div>
            <div class="text-gray-600 font-mono text-xs uppercase">2037, 2038, 2039</div>
          </div>
          <div class="corp-card p-8 text-center">
            <div class="text-4xl font-black text-[#FFC600] text-glow-yellow mb-2">1M+</div>
            <div class="text-white font-bold text-sm uppercase tracking-wider mb-2">PROJECTED EMPLOYEES BY 2033</div>
            <div class="text-gray-600 font-mono text-xs uppercase">GROWING ACROSS ALL DIVISIONS</div>
          </div>
          <div class="corp-card p-8 text-center">
            <div class="text-4xl font-black text-[#FFC600] text-glow-yellow mb-2">300+</div>
            <div class="text-white font-bold text-sm uppercase tracking-wider mb-2">WORK LOCATIONS</div>
            <div class="text-gray-600 font-mono text-xs uppercase">EARTH, LUNAR, OFF-WORLD</div>
          </div>
          <div class="corp-card p-8 text-center">
            <div class="text-4xl font-black text-[#FFC600] text-glow-yellow mb-2">97%</div>
            <div class="text-white font-bold text-sm uppercase tracking-wider mb-2">EMPLOYEE SATISFACTION</div>
            <div class="text-gray-600 font-mono text-xs uppercase">ANNUAL ENGAGEMENT SURVEY</div>
          </div>
        </div>
      </div>
    </section>

    <!-- WHY JOIN W-Y -->
    <section class="relative py-24 bg-black border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="text-center mb-16">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-widest font-mono">WHY WEYLAND-YUTANI</span>
          <h2 class="text-4xl md:text-5xl font-black text-white mt-4 uppercase">
            FOUR REASONS TO <span class="text-[#FFC600]">JOIN US</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
          <div class="corp-card p-8">
            <div class="w-14 h-14 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center mb-6">
              <span class="text-[#FFC600] text-2xl font-black">$</span>
            </div>
            <h3 class="text-xl font-black text-white mb-4 uppercase">COMPENSATION</h3>
            <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
              INDUSTRY-LEADING BASE PAY, ANNUAL BONUSES, EQUITY PARTICIPATION, AND COMPREHENSIVE BENEFITS INCLUDING OFF-WORLD HAZARD PREMIUMS AND HYPERSLEEP RETIREMENT PLANS.
            </p>
          </div>
          <div class="corp-card p-8">
            <div class="w-14 h-14 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center mb-6">
              <span class="text-[#FFC600] text-2xl font-black">I</span>
            </div>
            <h3 class="text-xl font-black text-white mb-4 uppercase">INNOVATION</h3>
            <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
              WORK WITH TECHNOLOGIES THAT DO NOT EXIST ANYWHERE ELSE. FROM FTL PROPULSION TO SYNTHETIC INTELLIGENCE, OUR R&D BUDGET EXCEEDS THE GDP OF MOST NATIONS.
            </p>
          </div>
          <div class="corp-card p-8">
            <div class="w-14 h-14 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center mb-6">
              <span class="text-[#FFC600] text-2xl font-black">E</span>
            </div>
            <h3 class="text-xl font-black text-white mb-4 uppercase">EXPLORATION</h3>
            <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
              YOUR OFFICE COULD BE A CORNER SUITE IN SAN FRANCISCO OR AN ATMOSPHERIC PROCESSOR ON A FRONTIER WORLD. NO OTHER EMPLOYER OFFERS THIS RANGE OF EXPERIENCE.
            </p>
          </div>
          <div class="corp-card p-8">
            <div class="w-14 h-14 bg-black border-2 border-[#FFC600] clip-corner flex items-center justify-center mb-6">
              <span class="text-[#FFC600] text-2xl font-black">+</span>
            </div>
            <h3 class="text-xl font-black text-white mb-4 uppercase">IMPACT</h3>
            <p class="text-gray-500 font-mono text-xs uppercase leading-relaxed">
              EVERY ROLE AT WEYLAND-YUTANI CONTRIBUTES TO HUMANITY'S GREATEST ENDEAVOR: ENSURING THE SURVIVAL AND PROSPERITY OF OUR SPECIES ACROSS THE STARS.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- OPEN POSITIONS -->
    <section id="positions" class="relative py-24 bg-[#0a0a0a] border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="text-center mb-16">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-widest font-mono">CURRENT OPENINGS</span>
          <h2 class="text-4xl md:text-6xl font-black text-white mt-4 uppercase">
            OPEN <span class="text-[#FFC600] text-glow-yellow">POSITIONS</span>
          </h2>
          <p class="text-gray-500 font-mono text-sm uppercase tracking-wide mt-4">
            {positions.length} ACTIVE REQUISITIONS ACROSS ALL DIVISIONS
          </p>
        </div>

        <div class="max-w-5xl mx-auto space-y-4">
          {positions.map((pos) => (
            <div class={`corp-card p-6 md:p-8 transition-all ${pos.classified ? 'border-[#FF0000]/30 hover:border-[#FF0000]/60' : 'hover:border-[#FFC600]/50'}`}>
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-lg md:text-xl font-black text-white mb-2 uppercase">{pos.title}</h3>
                  <p class="text-gray-500 font-mono text-xs mb-4 uppercase leading-relaxed">
                    {pos.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    <span class={`px-3 py-1.5 bg-black border-2 clip-corner text-xs font-bold ${pos.classified ? 'border-[#FF0000] text-[#FF0000]' : 'border-[#FFC600] text-[#FFC600]'}`}>
                      {pos.division}
                    </span>
                    <span class={`px-3 py-1.5 bg-black border-2 clip-corner text-xs font-bold ${pos.classified ? 'border-[#FF0000] text-[#FF0000]' : 'border-[#FFC600] text-[#FFC600]'}`}>
                      {pos.location}
                    </span>
                    <span class={`px-3 py-1.5 bg-black border-2 clip-corner text-xs font-bold ${pos.classified ? 'border-[#FF0000] text-[#FF0000]' : 'border-[#FFC600] text-[#FFC600]'}`}>
                      {pos.level}
                    </span>
                  </div>
                </div>
                <a href="/contact" class={`${pos.classified ? 'btn-danger' : 'btn-primary'} text-xs px-6 py-3 whitespace-nowrap self-start`}>
                  APPLY NOW
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- EMPLOYEE TESTIMONIALS -->
    <section class="relative py-24 bg-black border-b-2 border-[#1a1a1a]">
      <div class="industrial-grid absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6">
        <div class="text-center mb-16">
          <span class="text-[#FFC600] text-xs font-black uppercase tracking-widest font-mono">OUR PEOPLE</span>
          <h2 class="text-4xl md:text-5xl font-black text-white mt-4 uppercase">
            VOICES FROM THE <span class="text-[#FFC600]">FRONTIER</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="corp-card p-8">
            <div class="text-[#FFC600] text-4xl font-black mb-4">"</div>
            <p class="text-gray-400 font-mono text-xs uppercase leading-relaxed mb-6">
              I JOINED AS A JUNIOR ENGINEER AND WITHIN FIVE YEARS I WAS MANAGING AN ENTIRE ATMOSPHERIC PROCESSING FACILITY. NO OTHER COMPANY OFFERS THIS KIND OF CAREER TRAJECTORY.
            </p>
            <div class="border-t border-[#1a1a1a] pt-4">
              <div class="text-white font-bold text-sm uppercase">DR. SARAH CHEN</div>
              <div class="text-gray-600 font-mono text-xs uppercase">FACILITY DIRECTOR, TERRAFORMING OPS &mdash; 8 YEARS</div>
            </div>
          </div>

          <div class="corp-card p-8">
            <div class="text-[#FFC600] text-4xl font-black mb-4">"</div>
            <p class="text-gray-400 font-mono text-xs uppercase leading-relaxed mb-6">
              THE RESOURCES AVAILABLE TO OUR RESEARCH TEAMS ARE UNMATCHED. WHEN I PROPOSED A NEW APPROACH TO SYNTHETIC COGNITION, THE COMPANY FUNDED AN ENTIRE LAB TO SUPPORT IT.
            </p>
            <div class="border-t border-[#1a1a1a] pt-4">
              <div class="text-white font-bold text-sm uppercase">PROF. MARCUS OKONKWO</div>
              <div class="text-gray-600 font-mono text-xs uppercase">PRINCIPAL SCIENTIST, CYBERNETICS &mdash; 12 YEARS</div>
            </div>
          </div>

          <div class="corp-card p-8">
            <div class="text-[#FFC600] text-4xl font-black mb-4">"</div>
            <p class="text-gray-400 font-mono text-xs uppercase leading-relaxed mb-6">
              TRANSITIONING FROM THE COLONIAL MARINES WAS SEAMLESS. THE VETERANS PROGRAM MATCHED MY SKILLS TO A ROLE WHERE I COULD MAKE AN IMMEDIATE IMPACT. I HAVE NEVER LOOKED BACK.
            </p>
            <div class="border-t border-[#1a1a1a] pt-4">
              <div class="text-white font-bold text-sm uppercase">CPT. (RET.) JAMES RIVERA</div>
              <div class="text-gray-600 font-mono text-xs uppercase">SECURITY OPERATIONS LEAD &mdash; 6 YEARS</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA TERMINAL -->
    <section class="relative py-24 bg-[#0a0a0a]">
      <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

      <div class="relative container mx-auto px-6 max-w-4xl">
        <div class="terminal">
          <div class="terminal-content text-center">
            <h2 class="text-3xl md:text-4xl font-black text-white mb-6 uppercase">
              &gt; YOUR FUTURE STARTS HERE
            </h2>
            <p class="text-[#FFC600] font-mono text-sm uppercase mb-8 leading-relaxed">
              WHETHER YOU ARE A RECENT GRADUATE OR A SEASONED EXECUTIVE, WEYLAND-YUTANI HAS A PLACE FOR YOU.<br/>
              EXPLORE OUR BENEFITS, LOCATIONS, AND PROGRAMS TO FIND YOUR FIT.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a href="/careers/benefits" class="btn-primary text-sm">BENEFITS & CULTURE</a>
              <a href="/careers/locations" class="btn-secondary text-sm">WORK LOCATIONS</a>
              <a href="/careers/veterans" class="btn-secondary text-sm">VETERANS PROGRAM</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .clip-corner {
    clip-path: polygon(8px 0, 100% 0, 100% calc(100% - 8px), calc(100% - 8px) 100%, 0 100%, 0 8px);
  }
</style>
