        <ul class="space-y-2.5">
          <li><a href="/technology" class="footer-link">Technology</a></li>
          <li><a href="/products" class="footer-link">Products</a></li>
          <li><a href="/research" class="footer-link">Research & Development</a></li>
          <li><a href="/research/publications" class="footer-link">Publications</a></li>
          <li><a href="/sustainability" class="footer-link">Sustainability</a></li>
          <li><a href="/investors" class="footer-link">Investor Relations</a></li>
          <li><a href="/news" class="footer-link">News & Media</a></li>
        </ul>
      </div>

      <!-- Careers & Legal -->
      <div>
        <h3 class="text-white font-black mb-5 uppercase tracking-wider text-[11px] border-b border-[#FFC600]/30 pb-2">Careers</h3>
