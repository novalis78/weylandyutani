const currentYear = new Date().getFullYear();
---

<footer class="relative bg-black border-t-4 border-[#FFC600]">
  <div class="hazard-stripes h-2"></div>

  <div class="industrial-grid-dense absolute inset-0 opacity-10"></div>

  <div class="relative container mx-auto px-6 py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-10">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-12 h-12 bg-[#FFC600] clip-corner flex items-center justify-center glow-yellow">
            <span class="text-black font-black text-lg">W-Y</span>
          </div>
          <div class="flex flex-col">
            <span class="text-lg font-black text-white tracking-tight">WEYLAND-YUTANI</span>
            <span class="text-[10px] text-[#FFC600] font-bold tracking-[0.2em]">CORPORATION</span>
          </div>
        </div>
        <p class="text-gray-500 text-xs mb-4 uppercase tracking-wide font-mono leading-relaxed">
          Building Better Worlds since 2012. Pioneering humanity's expansion across 300+ colonized worlds through innovation in terraforming, cybernetics, energy, and life sciences.
        </p>
        <p class="text-gray-700 text-xs font-mono">
          &copy; {currentYear} Weyland-Yutani Corporation. All rights reserved.
        </p>
        <div class="flex gap-3 mt-6">
          <a href="#" class="w-9 h-9 clip-corner bg-[#0a0a0a] border border-[#1a1a1a] flex items-center justify-center hover:border-[#FFC600] hover:bg-[#FFC600]/10 transition-all" aria-label="Twitter">
