    <!-- Bottom Bar -->
    <div class="mt-16 pt-6 border-t border-[#1a1a1a]">
      <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
        <div class="flex flex-wrap items-center gap-6">
          <span class="font-mono text-[10px] text-gray-700 uppercase tracking-widest">
            <span class="text-[#FFC600]">&gt;</span> SYSTEM STATUS: <span class="text-[#FFC600]">OPERATIONAL</span>
          </span>
          <span class="font-mono text-[10px] text-gray-700 uppercase tracking-widest">
            <span class="text-[#FFC600]">&gt;</span> GLOBAL OPERATIONS: <span class="text-[#FFC600]">ACTIVE</span>
